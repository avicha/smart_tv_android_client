<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc2f2721"
    tools:context="com.sicheng.smart_tv.launcher.MainActivity">

    <fragment
        android:id="@+id/status_bar_fragment"
        android:name="com.sicheng.smart_tv.fragments.StatusBarFragment"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_status_bar" />

    <fragment
        android:id="@+id/navbar_fragment"
        android:name="com.sicheng.smart_tv.fragments.NavbarFragment"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="#424242"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_bar_fragment"
        tools:layout="@layout/fragment_navbar" />

</android.support.constraint.ConstraintLayout>
